@model EXUI_Leyva.Models.ClsOperaciones
@{
    ViewBag.Title = "Operaciones Matemáticas";
}

<div class="row justify-content-center">
    <div class="col-md-12">
        <div class="card shadow">
            <div class="card-header bg-dark text-white text-center">
                <h4 class="mb-0">Calculadora de Operaciones Matemáticas</h4>
            </div>
            <div class="card-body p-4">

                <!-- Formulario de entrada -->
                <div class="card border-primary mb-4">
                    <div class="card-header bg-primary text-white">
                        <h5 class="mb-0">Entrada de Datos</h5>
                    </div>
                    <div class="card-body">
                        @using (Html.BeginForm())
                        {
                            <div class="row">
                                <div class="col-md-6">
                                    <div class="mb-3">
                                        <label class="form-label">Ingrese un número:</label>
                                        @Html.TextBoxFor(m => m.Numero, new
                                        {
                                            @class = "form-control",
                                            placeholder = "Ejemplo: 25",
                                            @type = "number",
                                            @min = "0"
                                        })
                                    </div>
                                </div>
                                <div class="col-md-6">
                                    <label class="form-label">Acciones:</label>
                                    <div class="d-grid gap-2 d-md-flex">
                                        <button type="submit" formaction="@Url.Action("Agregar")" class="btn btn-success">
                                            Agregar
                                        </button>
                                        <button type="submit" formaction="@Url.Action("Limpiar")" class="btn btn-secondary">
                                            Limpiar
                                        </button>
                                        <button type="submit" formaction="@Url.Action("Salir")" class="btn btn-danger">
                                            Salir
                                        </button>
                                    </div>
                                </div>
                            </div>
                        }
                    </div>
                </div>

                <!-- Mensajes -->
                @if (ViewBag.Mensaje != null)
                {
                    <div class="alert @ViewBag.ClaseMensaje text-center" role="alert">
                        @ViewBag.Mensaje
                    </div>
                }

                <!-- Contenido principal: Arreglo y Operaciones -->
                <div class="row">
                    <!-- Columna del Arreglo -->
                    <div class="col-md-6">
                        <div class="card border-info">
                            <div class="card-header bg-info text-white">
                                <h5 class="mb-0">Arreglo</h5>
                            </div>
                            <div class="card-body">
                                @if (Model.Numeros != null && Model.Numeros.Count > 0)
                                {
                                    <div class="table-responsive">
                                        <table class="table table-striped table-hover">
                                            <thead class="table-dark">
                                                <tr>
                                                    <th class="text-center">Posición</th>
                                                    <th class="text-center">Número</th>
                                                </tr>
                                            </thead>
                                            <tbody>
                                                @for (int i = 0; i < Model.Numeros.Count; i++)
                                                {
                                                    <tr>
                                                        <td class="text-center">@(i + 1)</td>
                                                        <td class="text-center"><strong>@Model.Numeros[i]</strong></td>
                                                    </tr>
                                                }
                                            </tbody>
                                        </table>
                                    </div>
                                    <div class="alert alert-info text-center mt-3">
                                        <strong>Total de números: @Model.Numeros.Count</strong>
                                    </div>
                                }
                                else
                                {
                                    <div class="alert alert-secondary text-center">
                                        <h6>No hay números agregados</h6>
                                        <p>Use el botón "Agregar" para comenzar.</p>
                                    </div>
                                }
                            </div>
                        </div>
                    </div>

                    <!-- Columna de Operaciones -->
                    <div class="col-md-6">
                        <div class="card border-success">
                            <div class="card-header bg-success text-white">
                                <h5 class="mb-0">Operaciones</h5>
                            </div>
                            <div class="card-body">
                                <div class="mb-3">
                                    <label class="form-label">Suma:</label>
                                    <input type="text" class="form-control text-center" value="@Model.Suma.ToString("F2")" readonly />
                                </div>
                                <div class="mb-3">
                                    <label class="form-label">Promedio:</label>
                                    <input type="text" class="form-control text-center" value="@Model.Promedio.ToString("F2")" readonly />
                                </div>
                                <div class="mb-3">
                                    <label class="form-label">Máximo:</label>
                                    <input type="text" class="form-control text-center" value="@Model.Maximo" readonly />
                                </div>
                                <div class="mb-3">
                                    <label class="form-label">Mínimo:</label>
                                    <input type="text" class="form-control text-center" value="@Model.Minimo" readonly />
                                </div>

                                @using (Html.BeginForm("Calcular", "Operaciones", FormMethod.Post))
                                {
                                    <div class="d-grid">
                                        <button type="submit" class="btn btn-warning btn-lg">
                                            Calcular
                                        </button>
                                    </div>
                                }
                            </div>
                        </div>
                    </div>
                    </
                </div>
            </div>
        </div>
    </div>
</div>