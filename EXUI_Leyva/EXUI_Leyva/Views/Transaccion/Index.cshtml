@model EXUI_Leyva.Models.ClsTransaccion
@{
    ViewBag.Title = "Transacciones Bancarias";
}

<div class="row justify-content-center">
    <div class="col-md-10">
        <div class="card shadow">
            <div class="card-header bg-dark text-white text-center">
                <h4 class="mb-0">Sistema de Transacciones Bancarias</h4>
            </div>
            <div class="card-body p-4">

                <!-- Información del Cliente -->
                <div class="row mb-4">
                    <div class="col-md-6">
                        <div class="card bg-light">
                            <div class="card-body text-center">
                                <h5 class="card-title text-primary">Cliente</h5>
                                <h4>@Model.Cliente</h4>
                            </div>
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="card bg-light">
                            <div class="card-body text-center">
                                <h5 class="card-title text-success">Saldo Actual</h5>
                                <h4 class="text-success">S/ @Model.Saldo.ToString("F2")</h4>
                            </div>
                        </div>
                    </div>
                </div>

                <!-- Formulario de Transacciones -->
                <div class="card border-primary mb-4">
                    <div class="card-header bg-primary text-white">
                        <h5 class="mb-0">Realizar Transacción</h5>
                    </div>
                    <div class="card-body">
                        @using (Html.BeginForm())
                        {
                            <div class="row">
                                <div class="col-md-6">
                                    <div class="mb-3">
                                        <label class="form-label">Ingrese el monto:</label>
                                        @Html.TextBoxFor(m => m.Monto, new
                                        {
                                            @class = "form-control",
                                            placeholder = "Ejemplo: 200.00",
                                            @type = "number",
                                            @step = "0.01",
                                            @min = "0.01"
                                        })
                                    </div>
                                </div>
                                <div class="col-md-6">
                                    <label class="form-label">Acciones:</label>
                                    <div class="d-grid gap-2">
                                        <button type="submit" formaction="@Url.Action("Depositar")" class="btn btn-success btn-lg">
                                            Depositar
                                        </button>
                                        <button type="submit" formaction="@Url.Action("Retirar")" class="btn btn-warning btn-lg">
                                            Retirar
                                        </button>
                                    </div>
                                </div>
                            </div>
                        }

                        <div class="text-center mt-3">
                            <a href="@Url.Action("Reiniciar")" class="btn btn-secondary">
                                Reiniciar Sesión
                            </a>
                        </div>
                    </div>
                </div>

                <!-- Mensajes -->
                @if (ViewBag.Mensaje != null)
                {
                    <div class="alert @ViewBag.ClaseMensaje text-center" role="alert">
                        @ViewBag.Mensaje
                    </div>
                }

                <!-- Historial de Transacciones -->
                @if (Model.Historial != null && Model.Historial.Count > 0)
                {
                    <div class="card border-info">
                        <div class="card-header bg-info text-white">
                            <h5 class="mb-0">Historial de Transacciones</h5>
                        </div>
                        <div class="card-body">
                            <div class="table-responsive">
                                <table class="table table-striped table-hover">
                                    <thead class="table-dark">
                                        <tr>
                                            <th>#</th>
                                            <th>Fecha y Hora</th>
                                            <th>Tipo</th>
                                            <th>Monto</th>
                                            <th>Saldo Anterior</th>
                                            <th>Saldo Nuevo</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        @for (int i = Model.Historial.Count - 1; i >= 0; i--)
                                        {
                                            var transaccion = Model.Historial[i];
                                            string tipoClass = transaccion.Tipo == "Depósito" ? "text-success" : "text-warning";

                                            <tr>
                                                <td>@(Model.Historial.Count - i)</td>
                                                <td>@transaccion.Fecha.ToString("dd/MM/yyyy HH:mm:ss")</td>
                                                <td class="@tipoClass">
                                                    <strong>@transaccion.Tipo</strong>
                                                </td>
                                                <td class="@tipoClass">
                                                    <strong>S/ @transaccion.Monto.ToString("F2")</strong>
                                                </td>
                                                <td>S/ @transaccion.SaldoAnterior.ToString("F2")</td>
                                                <td class="text-success">
                                                    <strong>S/ @transaccion.SaldoNuevo.ToString("F2")</strong>
                                                </td>
                                            </tr>
                                        }
                                    </tbody>
                                </table>
                            </div>

                            <div class="alert alert-info text-center mt-3">
                                <strong>Total de transacciones realizadas: @Model.Historial.Count</strong>
                            </div>
                        </div>
                    </div>
                }
                else
                {
                    <div class="alert alert-secondary text-center">
                        <h5>No hay transacciones realizadas</h5>
                        <p>Ingrese un monto y seleccione una opción para comenzar.</p>
                    </div>
                }
            </div>
        </div>
    </div>
</div>